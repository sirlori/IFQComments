<script id="comment-template" type="text/x-handlebars-template">
  <div class="row comment-row {{#if reply}}comment-with-reply{{/if}}" id="{{id}}">
  <div class="col-8 col-md-9"><img src="{{avatar}}"/>  <b>{{author}}</b></div><div class="col-4 col-md-3">{{formatDate date day="numeric" month="long" year="numeric" hour="numeric" minute="numeric"}}</div>
  <div class="col-12" style="margin-top:10px">{{content}}</div>
  {{#if reply}}
    <div class="col-7 offset-5 col-sm-5 offset-sm-7  col-md-4 offset-md-8 col-lg-3 offset-lg-9"><i>Visualizza risposte</i></div>
  {{/if}}
  </div>
  <hr/>
</script>